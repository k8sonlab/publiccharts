{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["nolte/mosquitto-exporter"],
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "matchDatasources": ["helm"],
      "rangeStrategy": "bump"
    }
  ]
}
